# FamilyHub Development Tracker - Environment Configuration
# Copy this file to .env and update the values as needed

# SECURITY WARNING: keep the secret key used in production secret!
SECRET_KEY=django-insecure-sample-key-change-this-in-production

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=True

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Default SQLite (development)
DATABASE_URL=sqlite:///db.sqlite3

# For PostgreSQL (production)
# DATABASE_URL=postgresql://username:password@localhost:5432/dev_tracker

# For MySQL (production)
# DATABASE_URL=mysql://username:password@localhost:3306/dev_tracker

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@familyhub.local

# Time Zone Settings
TIME_ZONE=UTC

# Static Files Configuration (production)
# STATIC_ROOT=/path/to/static/files
# MEDIA_ROOT=/path/to/media/files

# Cache Configuration (production)
# CACHE_URL=redis://localhost:6379/1

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Third-party Service Keys (if needed)
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# Production Settings
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
